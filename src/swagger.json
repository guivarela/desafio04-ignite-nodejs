{
  "openapi": "3.0.0",
  "info": {
    "title": "Introdução ao SOLID - Criação de Usuários",
    "description": "Esta é a documentação do desafio 04 da trilha de NodeJs",
    "version": "1.0.0",
    "contact": {
      "email": "guivarela7@hotmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Cria um usuário",
        "description": "Cria um usuário recebendo name e email",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "João da Silva",
                  "email": "joao.silva@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                },
                "example": {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "João da Silva",
                  "email": "joao.silva@email.com",
                  "admin": false,
                  "created_at": "2021-03-20T17:17:18.489Z",
                  "updated_at": "2021-03-20T17:17:18.489Z"
                }
              }
            }
          },
          "400": {
            "description": "Usuário com o mesmo email já está cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties":{
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "user already exists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "Listagem de todos os usuários",
        "description": "Lista todos os usuários, apenas pode ser utilizado por admins",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema":{
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/User"
                  }
                }
              }
            }
          },
          "400": {
            "description": "O id passado não existe ou não é de um usuário admin",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties":{
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "you must be an admin to list all users"
                }
              }
            }
          }
        }
      }
    },
    "users/{user_id}": {
      "get": {
        "tags": ["User"],
        "summary": "Profile de um usuário",
        "description": "Retorna os dados do usuário atrelado ao id passado",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "id do usuário",
            "required": true,
            "schema":{
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          },
          "404": {
            "description": "O usuário não foi encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties":{
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "user not found"
                }
              }
            }
          }
        }
      }
    },
    "users/{user_id}/admin": {
      "patch": {
        "tags": ["User"],
        "summary": "Transforma um usuário em admin",
        "description": "Transforma um usuário em admin e retorna os seus dados",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "id do usuário",
            "required": true,
            "schema":{
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                },
                "example": {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "string",
                  "email": "string",
                  "admin": true,
                  "created_at": "2021-03-20T17:17:18.489Z",
                  "updated_at": "2021-03-20T17:17:18.489Z"
                }
              }
            }
          },
          "404": {
            "description": "O usuário não foi encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties":{
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "user not found"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "admin": {
          "type": "boolean",
          "default": false
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "xml": {
        "name": "User"
      }
    }
  }
}